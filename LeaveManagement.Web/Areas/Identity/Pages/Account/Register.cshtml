@page
@model RegisterModel
@{
    ViewData["Title"] = "Enregistrement";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-12">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Création de compte</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.FirstName" class="form-control" aria-required="true" placeholder="John" />
                <label asp-for="Input.FirstName">Prénom</label>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <br />
            <div class="form-floating mb-3">
                <input asp-for="Input.LastName" class="form-control" aria-required="true" placeholder="Doe" />
                <label asp-for="Input.LastName">Nom</label>
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <br />
            <div class="form-floating mb-3">
                <input asp-for="Input.DateOfBirth" class="form-control" aria-required="true" placeholder="21/01/1970" />
                <label asp-for="Input.DateOfBirth">Date de naissance</label>
                <span asp-validation-for="Input.DateOfBirth" class="text-danger"></span>
            </div>
            <br />
            <div class="form-floating mb-3">
                <input asp-for="Input.DateJoined" class="form-control" aria-required="true" placeholder="21/10/2022/" />
                <label asp-for="Input.DateJoined">Date d'embauche</label>
                <span asp-validation-for="Input.DateJoined" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Input.Employer" class="control-label"></label>
                <select asp-for="Input.Employer" class="form-select">
                    <option value="">Selectionner un Employeur</option>
                    <option>Naviso</option>
                    <option>Sogecsot</option>
                    <option>Useweb</option>
                </select>
                <span asp-validation-for="Input.Employer" class="text-danger"></span>
            </div>
            <br />
            @*A REVOIR EN PRIORITE = IL FAUT PEUPLER LE SELECT AVEC LA LISTE DES EMPLOYEES AVEC UN ROLE DE SUPERVISEUR*@
            <div class="form-group">
                <label asp-for="Input.SupervisorId" class="control-label"></label>
                <select asp-for="Input.SupervisorId" class="form-select" asp-items="Model.Supervisors">
                    <option value="">Selectionner un superviseur</option>
                </select>
                <span asp-validation-for="Input.SupervisorId" class="text-danger"></span>
            </div>
            <br />
            <div class="form-check">
                <input asp-for="Input.IsSupervisor" class="form-check-input" type="checkbox" value="true" id="flexCheckChecked">
                <label class="form-check-label" for="flexCheckChecked">
                    Superviseur
                </label>
            </div>
            <br />

            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@exemple.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <br />
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="mot de passe" />
                <label asp-for="Input.Password">Mot de passe</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <br />
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="mot de passe" />
                <label asp-for="Input.ConfirmPassword">Confirmer le mot de passe</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <br />
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary btn_block">Enregistrement</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
